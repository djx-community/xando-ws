datasource db {
    url      = env("DATABASE_URL")
    provider = "sqlite"
}

generator client {
    provider = "prisma-client-js"
}

model Player {
    id          Int           @id @default(autoincrement())
    uuid        String        @unique @default(uuid())
    socketId    String        @unique @default(uuid())
    displayName String
    match       MatchPlayers?
    MatchLog    MatchLog[]
}

model Matches {
    id        Int            @id @default(autoincrement())
    roomId    String         @unique
    createdAt DateTime       @default(now())
    players   MatchPlayers[]
    matchLog  MatchLog[]
    lap       Int            @default(0)
}

model MatchPlayers {
    id         Int     @id @default(autoincrement())
    Match      Matches @relation(fields: [matchId], references: [id])
    matchId    Int
    Player     Player  @relation(fields: [playerId], references: [id])
    playerId   Int     @unique
    playerIcon String  @default("")
    point      Int     @default(0)
}

model MatchLog {
    id        Int      @id @default(autoincrement())
    Matches   Matches  @relation(fields: [matcheId], references: [id])
    matcheId  Int
    column    Int
    row       Int
    Player    Player   @relation(fields: [playerId], references: [id])
    playerId  Int
    createdAt DateTime @default(now())
}
